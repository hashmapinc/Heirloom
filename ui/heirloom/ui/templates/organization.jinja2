{% extends "base.jinja2" %} {% block content %}

<link rel="stylesheet" href="{{url_for('static', filename='css/organization.css')}}">

<div class="mdl-grid">
    <div class="mdl-layout-spacer"></div>
    <div class="mdl-cell mdl-cell--4-col">
        <h2>Organizations</h2>
        <br><br><br>
        {% for org in organizations %}
            <p><strong>{{ org.name }}</strong><p>
            <p>{{ org.phone or '--' }}</p>
            <p>{{ org.address }}</p>
            <br><br>
        {% endfor %}
    </div>
    <div class="mdl-layout-spacer"></div>
</div>

<!-- add organization button --> 
<button id="show-dialog" type="button" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored md-fab-bottom-right">
  <i class="material-icons">add</i>
</button>

<!-- new organization form --> 
<dialog class="mdl-dialog">
    <h4 class="mdl-dialog__title">New Organization</h4>
    <form action="" method="post" novalidate id="orgForm">
        {{ form.hidden_tag() }}

        <div class="mdl-dialog__content">
            <!-- name -->
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                {{ form.name(size=64, class_='mdl-textfield__input') }}
                <label class="mdl-textfield__label" for="sample3">{{ form.name.label }}</label>
            </div>
            {% for error in form.name.errors %}
            <br>
            <span style="color: red;">[{{ error }}]</span>
            {% endfor %}

            <br>
            <br>
            <!-- phone -->
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                {{ form.phone(size=9, class_='mdl-textfield__input') }}
                <label class="mdl-textfield__label" for="sample3">{{ form.phone.label }}</label>
            </div>
            {% for error in form.phone.errors %}
            <br>
            <span style="color: red;">[{{ error }}]</span>
            {% endfor %}

            <br>
            <br>
            <!-- address -->
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                {{ form.address(size=120, class_='mdl-textfield__input') }}
                <label class="mdl-textfield__label" for="sample3">{{ form.address.label }}</label>
            </div>
            {% for error in form.address.errors %}
            <br>
            <span style="color: red;">[{{ error }}]</span>
            {% endfor %}

            <br>
            <br>
        </div>
        <div class="mdl-dialog__actions mdl-dialog__actions--full-width">
            {{ form.submit(class_='mdl-button mdl-js-button mdl-button--raised mdl-button--colored') }}
            <button type="button" class="mdl-button close">Cancel</button>
        </div>
    </form>
</dialog>

<!-- page logic --> 
<script defer src="{{url_for('static', filename='js/organization.js')}}"></script>

{% endblock %}