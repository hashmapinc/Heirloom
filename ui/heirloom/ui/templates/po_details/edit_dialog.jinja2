<!-- edit PO dialog --> 
<dialog id="edit_dialog" class="mdl-dialog">
    <h4 class="mdl-dialog__title">Edit Purchase Order</h4>
    <form action="" method="post" novalidate id="requestPaymentForm">
        <div class="mdl-dialog__content">
            <button type="button" id="edit_dialog_close" class="mdl-button mdl-button--raised close wide">Cancel</button>
        </div>
    </form>
</dialog>

<!-- edit PO logic --> 
<script>
(function() {
    var dialog = document.querySelector('#edit_dialog');
    var fab = document.querySelector('#edit-fab');

    if (!dialog.showModal) {
        dialogPolyfill.registerDialog(dialog);
    }

    // wire click listeners to each button if it exists
    fab.addEventListener('click', function () {
        dialog.showModal();
    });

    dialog.querySelector('#edit_dialog_close').addEventListener('click', function () {
        dialog.close();
    });
})();
</script>