{% extends "base.jinja2" %} {% block content %}

<div class="mdl-grid">
    <div class="mdl-layout-spacer"></div>
    <div class="mdl-cell mdl-cell--4-col">
        <h2>Purchase Order: {{po.title}}</h2>
        <ul class="demo-list-item mdl-list">
            <li class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                ID: {{ po.id }}
                </span>
            </li>
            <li class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                Created: {{ po.timestamp }}
                </span>
            </li>
            <li class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                Details: {{ po.order_details}}
                </span>
            </li>
            <li class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                Created by: {{ po.author.username }} | {{ po.author.email }} 
                </span>
            </li>
            <li class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                Buyer: {{ po.buying_organization.name }}
                </span>
            </li>
            <li class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                Seller: {{ po.selling_organization.name }}
                </span>
            </li>
            <li class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                Order Status: {{ po.get_order_status_name() or '--' }}
                </span>
            </li>
            <li class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                Payment Status: {{ po.get_payment_status_name() or '--' }}
                </span>
            </li>
        </ul>
    </div>
    <div class="mdl-layout-spacer"></div>
</div>


<!-- add order button --> 
<button id="show-dialog" type="button" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored bottom-right-fab">
  <i class="material-icons">edit</i>
</button>

<!-- new order form --> 
<dialog class="mdl-dialog">
    <h4 class="mdl-dialog__title">New User</h4>
    <form action="" method="post" novalidate id="userForm">

        <div class="mdl-dialog__content">
            <button type="button" class="mdl-button mdl-button--raised close wide">Cancel</button>
        </div>
    </form>
</dialog>

<!-- page logic --> 
<script defer src="{{url_for('static', filename='js/purchase_order.js')}}"></script>

{% endblock %}